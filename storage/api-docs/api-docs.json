{
    "openapi": "3.0.0",
    "info": {
        "title": "Dog List API",
        "description": "API para gerenciamento de usuários e cachorros",
        "version": "1.0.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Registrar um novo usuário",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário registrado com sucesso"
                    },
                    "422": {
                        "description": "Erro de validação"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Fazer login de um usuário",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Login realizado com sucesso"
                    },
                    "401": {
                        "description": "Credenciais inválidas"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Obter informações do usuário logado",
                "operationId": "2d804e6dc8f3ba8ea6ce9d4c80b704d2",
                "responses": {
                    "200": {
                        "description": "Informações do usuário retornadas com sucesso"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/logout": {
            "get": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Fazer logout do usuário logado",
                "operationId": "3f19b742e4ead13f81ba0d6c0d46ac1b",
                "responses": {
                    "200": {
                        "description": "Logout efetuado com sucesso"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/dogs": {
            "get": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Listar todos os cachorros públicos",
                "operationId": "4c5da6ed14f9a838b396b75a2c10e09b",
                "responses": {
                    "200": {
                        "description": "Lista de cachorros retornada com sucesso"
                    }
                }
            }
        },
        "/api/dogs/store": {
            "post": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Adicionar um novo cachorro [requer JWT]",
                "operationId": "f7369c128c2be35a8f9cc293310712da",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "name",
                                    "breed",
                                    "gender",
                                    "is_public"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Lupi"
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": "Golden Retriever"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": [
                                            "M",
                                            "F"
                                        ],
                                        "example": "M"
                                    },
                                    "is_public": {
                                        "type": "integer",
                                        "enum": [
                                            0,
                                            1
                                        ],
                                        "example": 1
                                    },
                                    "img_path": {
                                        "description": "Imagem do cachorro",
                                        "type": "file"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cachorro adicionado com sucesso"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/dogs/current_dog/{id}": {
            "get": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Obter detalhes de um cachorro específico [requer JWT]",
                "operationId": "2fef374324c47c9385175b6d83dfc572",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do cachorro",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes do cachorro retornados com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Buddy"
                                        },
                                        "breed": {
                                            "type": "string",
                                            "example": "Golden Retriever"
                                        },
                                        "gender": {
                                            "type": "string",
                                            "example": "M"
                                        },
                                        "is_public": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "img_path": {
                                            "type": "string",
                                            "example": "images/user/1/dog.jpg"
                                        },
                                        "user_id": {
                                            "type": "integer",
                                            "example": 1
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Acesso negado: o cachorro pertence a outro usuário"
                    },
                    "404": {
                        "description": "Cachorro não encontrado"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/dogs/update/{id}": {
            "put": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Atualizar informações de um cachorro [requer JWT]",
                "operationId": "9306c8f624f9d8e5b47eb5481a1966f8",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do cachorro",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "name",
                                    "breed",
                                    "gender",
                                    "is_public"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Buddy"
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": "Golden Retriever"
                                    },
                                    "gender": {
                                        "type": "string",
                                        "enum": [
                                            "M",
                                            "F"
                                        ],
                                        "example": "M"
                                    },
                                    "is_public": {
                                        "type": "integer",
                                        "enum": [
                                            0,
                                            1
                                        ],
                                        "example": 1
                                    },
                                    "img_path": {
                                        "description": "Nova imagem do cachorro",
                                        "type": "file"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cachorro atualizado com sucesso"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/dogs/delete/{id}": {
            "delete": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Excluir um cachorro [requer JWT]",
                "operationId": "736db1e592a9acae7673ad9f3f2b11d3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do cachorro",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cachorro excluído com sucesso"
                    },
                    "403": {
                        "description": "Acesso negado: o cachorro pertence a outro usuário"
                    },
                    "404": {
                        "description": "Cachorro não encontrado"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/dogs/delete_image/{id}": {
            "put": {
                "tags": [
                    "Cachorros"
                ],
                "summary": "Excluir a imagem de um cachorro [requer JWT]",
                "operationId": "d7aed838f6c2fb54ec9c60b8197b767b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do cachorro",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Imagem excluída com sucesso"
                    },
                    "403": {
                        "description": "Acesso negado: o cachorro pertence a outro usuário"
                    },
                    "404": {
                        "description": "Cachorro não encontrado"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "description": "Insira o token JWT no formato: Bearer {seu_token}",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Autenticação",
            "description": "Gerenciamento de usuários"
        },
        {
            "name": "Cachorros",
            "description": "Gerenciamento de cachorros"
        }
    ],
    "security": [
        {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    ]
}